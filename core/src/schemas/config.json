{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "port",
    "apiGateway",
    "eventStreams",
    "ipfs",
    "app2app",
    "docExchange",
    "appCredentials"
  ],
  "properties": {
    "port": {
      "type": "integer"
    },
    "apiGateway": {
      "type": "object",
      "required": [
        "apiEndpoint"
      ],
      "properties": {
        "apiEndpoint": {
          "type": "string"
        }
      }
    },
    "eventStreams": {
      "type": "object",
      "required": [
        "wsEndpoint",
        "topic"
      ],
      "properties": {
        "wsEndpoint": {
          "type": "string"
        },
        "topic": {
          "type": "string"
        }
      }
    },
    "ipfs": {
      "type": "object",
      "required": [
        "apiEndpoint"
      ],
      "properties": {
        "apiEndpoint": {
          "type": "string"
        },
        "gatewayEndpoint": {
          "type": "string"
        }
      }
    },
    "app2app": {
      "type": "object",
      "required": [
        "socketIOEndpoint",
        "destination"
      ],
      "properties": {
        "socketIOEndpoint": {
          "type": "string"
        },
        "destination": {
          "type": "string"
        }
      }
    },
    "docExchange": {
      "type": "object",
      "required": [
        "apiEndpoint",
        "socketIOEndpoint",
        "destination"
      ],
      "properties": {
        "apiEndpoint": {
          "type": "string"
        },
        "socketIOEndpoint": {
          "type": "string"
        },
        "destination": {
          "type": "string"
        }
      }
    },
    "appCredentials": {
      "type": "object",
      "required": [
        "user",
        "password"
      ],
      "properties": {
        "user": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}